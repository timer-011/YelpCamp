<% layout('/layouts/boilerplate') %>
    <h1 class="text-center"> Edit Campground</h1>

    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="validity" novalidate>

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" aria-describedby="title"
                        value="<%=campground.title%>" name="campground[title]" required>

                </div>

                <div class="form-group mt-3">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" aria-describedby="location"
                        name="campground[location]" value="<%=campground.location%>" required>

                </div>





                <div class="form-group mt-3">
                    <label for="price">Price</label>
                    <input type="text" class="form-control" id="price" aria-describedby="price"
                        value="<%=campground.price%>" name="campground[price]" value="<%=campground.price%>" required>


                </div>

                <div class="form-group mt-3">
                    <label for="example">Campground Description</label>
                    <textarea class="form-control" id="example" rows="2" name="campground[description]"
                        placeholder="<%=campground.description%>"></textarea>
                </div>







                <br>




                <button class="btn btn-success"> Submit </button>


            </form>
        </div>

    </div>
    <a href=" /campgrounds/<%=campground._id%>" class="btn btn-danger"> Go to home page</a>